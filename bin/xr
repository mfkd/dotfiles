#!/bin/bash

if ! [[ $1 ]]; then
    printf 'Usage: %s profile\n' "$0" >&2
    exit 1
fi

main_display=eDP-1  # backup

external_displays=()

while read -r display; do
    external_displays+=( "$display" )
done < <(
    xrandr | awk -v main="$main_display" \
        '$1 != main && $2 == "connected" { print $1 }'
)

case $1 in
    auto)
        xrandr --auto
    ;;
    *)
        printf 'Unknown profile: %s\n' "$1"
        exit 1
    ;;
esac
